<Window x:Class="KanbanProjectManagementApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KanbanProjectManagementApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <local:ThroughputPerDayValueConverter x:Key="throughputConverter"/>
    </Window.Resources>
    <Grid>
        <Grid.DataContext>
            <local:MainWindowViewModel/>
        </Grid.DataContext>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <DataGrid x:Name="dataGrid" Grid.Column="0" ItemsSource="{Binding InputMetrics}" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Throughput" Binding="{Binding Throughput, Converter={StaticResource throughputConverter}}"/>
            </DataGrid.Columns>
        </DataGrid>

        <Grid Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Metric Statistics section: -->
            <TextBlock Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="0" Margin="4" TextAlignment="Center" FontWeight="Bold">Statistics</TextBlock>

            <TextBlock Grid.Column="0" Grid.Row="1" Margin="4" TextAlignment="Right">Mean:</TextBlock>
            <TextBox x:Name="calculatedMeanTextBox" IsReadOnly="True" Grid.Column="1" Grid.Row="1" Margin="4" Text="{Binding EstimatedMeanOfThroughput, Mode=OneWay}"/>

            <TextBlock Grid.Column="0" Grid.Row="2" Margin="4" TextAlignment="Right">Standard deviation:</TextBlock>
            <TextBox x:Name="calculatedStandardDeviationTextBox" IsReadOnly="True" Grid.Column="1" Grid.Row="2" Margin="4" Text="{Binding EstimatedCorrectedSampleStandardDeviationOfThroughput, Mode=OneWay}"/>

            <Button Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="3" Command="{Binding UpdateCycleTimeStatisticsCommand, Mode=OneWay}">Calculate</Button>

            <!-- Work estimation section: -->
            <TextBlock Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="4" Margin="4,24,4,4" TextAlignment="Center" FontWeight="Bold">Estimation</TextBlock>
            <TextBlock Grid.Column="0" Grid.Row="5" Margin="4" TextAlignment="Right">Number of Work Items:</TextBlock>
            <TextBox Grid.Column="1" Grid.Row="5" Margin="4" Text="{Binding NumberOfWorkItemsToBeCompleted}"/>

            <Button Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="6" Command="{Binding EstimateNumberOfWorkDaysTillWorkItemsCompletedCommand}">Estimate number of working days till completion</Button>

            <TextBlock Grid.Column="0" Grid.Row="7" Margin="4" TextAlignment="Right">Number of working days:</TextBlock>
            <TextBox IsReadOnly="True" Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="7" Margin="4" Text="{Binding EstimatedNumberOfWorkingDaysTillCompletion, Mode=OneWay}"/>
        </Grid>

    </Grid>
</Window>
